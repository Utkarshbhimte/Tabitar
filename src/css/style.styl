// Import all partials
@require './_*.styl'

html, body, #main, div[data-reactroot]
  height 100%
  width 100%
  max-width 100vw

header
  background-color white
  width 100%
  padding 1em 0
  text-align center
  h3
    margin 0
.top-nav-wrap
  height 25vh
  background-color #212121
  box-shadow 0 19px 8px -11px #c3c3c3
.bottom-nav-wrap
  position fixed
  bottom 0
  left 0
  display flex
  justify-content center
  align-content center
  background-color #c3c3c3
  color #fff
  width 100vw
  overflow hidden
  z-index 1
  tab
    padding .5em 0
    overflow hidden
    width 100%
    text-align center
    text-transform uppercase
    letter-spacing 3px
    display inline-block
    transition all .3s ease-in-out
    z-index 3
    &.active
      letter-spacing 15px
  .background
    position absolute
    width 50vw
    bottom 0
    left 0
    height 47px
    z-index 2
    background-color black
    transition all .3s ease-in-out
    &.right
      left 50vw

.showcase-wrap
  height calc((100vh - 350px)/2)
  padding 0 0 1em 1em
  overflow hidden
  h3
    margin 0.3em 0 0
    font-weight 100
    text-transform uppercase
  .card-wrap
    display flex
    overflow-Y hidden
    overflow-X scroll
    flex-direction row-reverse
    &::-webkit-scrollbar
      width 0
  &:first-child
    margin-top 1em

.card
  flex 1 0 120px
  height 120px
  width 120px
  background-color #c3c3c3
  margin .5em
  font-size 1.5em
  text-align right
  transition all .3s ease-in-out
  span
    color white
    display inline-block
    height 100%
    padding 0.5em 0.5em
    line-height 22px
    font-size 18px
  &:first-child
    margin-right 1em
  &.active
    position absolute
    top 75px
    left 0
    background-color white
    height calc(100vh - 75px)
    width 100vw
    margin 0

#card-transition
  position absolute
  transition all .3s ease-in-out
  background-color white
  opacity 0
  &.active
    opacity 1
    top 75px !important
    left 0 !important
    height calc(100vh - 75px) !important
    width 100vw !important
.tabs-viewer-wrap
  position absolute
  height: 100vh
  width 100vw
  top 0
  left 0
  background-color white
  z-index: 9


//Loader
.sampleContainer {
  margin-top: 250px;
}

.loader {
  position: relative;
  width: 44px;
  height: 8px;
  margin: 12px auto;
}

.dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background: #ccc;
  position: absolute;
}

.dot_1 {
  animation: animateDot1 1.5s linear infinite;
  left: 12px;
  background: #212121;
}

.dot_2 {
  animation: animateDot2 1.5s linear infinite;
  animation-delay: 0.5s;
  left: 24px;
}

.dot_3 {
  animation: animateDot3 1.5s linear infinite;
  left: 12px;
}

.dot_4 {
  animation: animateDot4 1.5s linear infinite;
  animation-delay: 0.5s;
  left: 24px;
}

@keyframes animateDot1 {
  0% {
    transform: rotate(0deg) translateX(-12px);
  }
  25% {
    transform: rotate(180deg) translateX(-12px);
  }
  75% {
    transform: rotate(180deg) translateX(-12px);
  }
  100% {
    transform: rotate(360deg) translateX(-12px);
  }
}
@keyframes animateDot2 {
  0% {
    transform: rotate(0deg) translateX(-12px);
  }
  25% {
    transform: rotate(-180deg) translateX(-12px);
  }
  75% {
    transform: rotate(-180deg) translateX(-12px);
  }
  100% {
    transform: rotate(-360deg) translateX(-12px);
  }
}
@keyframes animateDot3 {
  0% {
    transform: rotate(0deg) translateX(12px);
  }
  25% {
    transform: rotate(180deg) translateX(12px);
  }
  75% {
    transform: rotate(180deg) translateX(12px);
  }
  100% {
    transform: rotate(360deg) translateX(12px);
  }
}
@keyframes animateDot4 {
  0% {
    transform: rotate(0deg) translateX(12px);
  }
  25% {
    transform: rotate(-180deg) translateX(12px);
  }
  75% {
    transform: rotate(-180deg) translateX(12px);
  }
  100% {
    transform: rotate(-360deg) translateX(12px);
  }
}

